<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	style="@style/appWindow" android:layout_height="fill_parent">
	<com.markupartist.android.widget.ActionBar
		android:id="@+id/actionBar1" style="@style/ActionBarUnibas">
	</com.markupartist.android.widget.ActionBar>

	<TextView android:textColor="@android:color/darker_gray"
		android:layout_height="wrap_content" android:id="@+id/tvInfo"
		android:lines="1" android:layout_width="fill_parent"
		android:background="@color/backgroundUni" android:layout_marginBottom="1dp"></TextView>
	<ScrollView android:layout_width="fill_parent"
		android:layout_weight="1.3" android:layout_height="fill_parent"
		android:id="@+id/scrollView1">
		<LinearLayout android:background="@color/backgroundUni"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:id="@+id/llScroll" android:layout_height="fill_parent"
			android:padding="2dp">
			<LinearLayout android:layout_width="fill_parent"
				android:background="@color/unituerkis" android:layout_height="wrap_content"
				android:orientation="vertical" android:id="@+id/llTitle"
				android:paddingBottom="1dp">
				<TextView android:layout_height="wrap_content"
					android:textColor="@android:color/black" android:background="@color/backgroundUni"
					android:text="TextView" android:textAppearance="?android:attr/textAppearanceMedium"
					android:layout_width="fill_parent" android:id="@+id/tvTitle"></TextView>
				<TextView android:layout_height="wrap_content"
					android:textColor="@android:color/darker_gray" android:background="@color/backgroundUni"
					android:text="TextView" android:layout_width="fill_parent"
					android:id="@+id/tvType"></TextView>

			</LinearLayout>
			<LinearLayout android:orientation="vertical"
				android:layout_width="fill_parent" android:id="@+id/llMain"
				android:layout_height="fill_parent">
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

	<include layout="@layout/footer_unbas_turquise" android:id="@+id/linearLayout1_ref"
		android:layout_width="fill_parent" android:layout_height="90dp"
		android:layout_gravity="bottom|left" android:layout_weight=".3" />
</LinearLayout>
